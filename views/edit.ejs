<script>
function clickval()
{
  alert("User Updated successfully");
}
</script>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Update
        </h1>
  
        <form action="/users/edit/<%= results.id %>" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= results.name %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= results.email %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block" onclick="clickval()" >
            Update
          </button>
        </form>
      </div>
    </div>
  </div>
  